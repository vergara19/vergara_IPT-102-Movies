@model List<MovieViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="home">
    <div class="header">
        <h1>WELCOME</h1>
        <p>List of movies to discover. Explore now.</p>

        <br />
    </div>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Rating</th>
            <th>Release Year</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td ><a href = "/movies/getmovie/@movie.Id" > @movie.Name </a></td>
                <td>@movie.Rating</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Genre</td>
            </tr>
        }
    </tbody>
</table>

