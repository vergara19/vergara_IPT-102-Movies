@model BSIT3L_Movies.Models.MovieViewModel


﻿
<!DOCTYPE html>
<html>
<head>
    <title>Movie</title>
</head>
<body>
    <div class="container">
        <h2 class="mt-3">Movie Details</h2>
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Images" alt="@Model.Name" class="img-fluid custom-images">
            </div>
            <div class="col-md-8">
                <p><strong>Movie Name:</strong> @Model.Name</p>
                <p><strong>Movie ID:</strong> @Model.Id</p>
                <p><strong>Rating:</strong> @Model.Rating</p>
                <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>